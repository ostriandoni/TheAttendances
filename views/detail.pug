extends layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3.text-center Attendance Log
  p.lead.text-center Juni 2021
  p.text-center Total Kehadiran 90%

  .row
    .col-md-3
    .col-md-6
      .row.d-flex.justify-content-center
        .col-md-auto
          select.custom-select.form-control(name='year')
            option(value=2021)= '2021'
            option(value=2022)= '2022'
            option(value=2023)= '2023'
            option(value=2024)= '2024'
            option(value=2025)= '2025'
        .col-md-auto
          select.custom-select.form-control(name='month')
            option(value=1)= 'Januari'
            option(value=2)= 'Februari'
            option(value=3)= 'Maret'
            option(value=4)= 'April'
            option(value=5)= 'Mei'
            option(value=6)= 'Juni'
            option(value=7)= 'Juli'
            option(value=8)= 'Agustus'
            option(value=9)= 'September'
            option(value=10)= 'Oktober'
            option(value=11)= 'November'
            option(value=12)= 'Desember'
        .col-md-auto
          a.btn.btn-raised(href='#', role='button') Search
      p.lead.text-center 
      p.text-center 
      table.table
        thead
          tr
            th Date
            th Day
            th Clock In
            th Clock Out
            th Remarks
        tbody
          for log in logs
            tr(class=(log.day == 6 || log.day == 7 ) ? 'table-danger' : undefined)
              td= log.attendance_date
              td= log.attendance_day
              td= log.clock_in
              td= log.clock_out
              td= log.remarks
    .col-md-3
