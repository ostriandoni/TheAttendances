extends layout

block content
  h1.text-center Attendance Log
  p.lead.text-center #{user.profile.name}
  hr
  .row
    .col-md-3
    .col-md-6
      p.lead.text-center Juni 2021
      p.text-center Total Kehadiran 90%
      table.table
        thead
          tr
            th Date
            th Day
            th Clock In
            th Clock Out
            th Remarks
        tbody
          for log in logs
            if log.day == 6 || log.day == 7 
              tr.table-danger
                td= log.attendance_date
                td= log.attendance_day
                td= log.clock_in
                td= log.clock_out
                td= log.remarks
            else
              tr
                td= log.attendance_date
                td= log.attendance_day
                td= log.clock_in
                td= log.clock_out
                td= log.remarks
    .col-md-3
