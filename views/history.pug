extends layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3.text-center Attendance History
  p.lead.text-center #{schedule.month} #{schedule.year}
  p.text-center Total Kehadiran 90%

  .row
    .col-md-3
    .col-md-6
      .row.d-flex.justify-content-center
        .col-md-auto
          select.custom-select.form-control(name='year')
            option(value=2021 selected=(schedule.year === '2021') ? 'selected' : undefined)= '2021'
            option(value=2022 selected=(schedule.year === '2022') ? 'selected' : undefined)= '2022'
            option(value=2023 selected=(schedule.year === '2023') ? 'selected' : undefined)= '2023'
            option(value=2024 selected=(schedule.year === '2024') ? 'selected' : undefined)= '2024'
            option(value=2025 selected=(schedule.year === '2025') ? 'selected' : undefined)= '2025'
        .col-md-auto
          select.custom-select.form-control(name='month')
            option(value=1 selected=(schedule.monthNum === '1') ? 'selected' : undefined)= 'Januari'
            option(value=2 selected=(schedule.monthNum === '2') ? 'selected' : undefined)= 'Februari'
            option(value=3 selected=(schedule.monthNum === '3') ? 'selected' : undefined)= 'Maret'
            option(value=4 selected=(schedule.monthNum === '4') ? 'selected' : undefined)= 'April'
            option(value=5 selected=(schedule.monthNum === '5') ? 'selected' : undefined)= 'Mei'
            option(value=6 selected=(schedule.monthNum === '6') ? 'selected' : undefined)= 'Juni'
            option(value=7 selected=(schedule.monthNum === '7') ? 'selected' : undefined)= 'Juli'
            option(value=8 selected=(schedule.monthNum === '8') ? 'selected' : undefined)= 'Agustus'
            option(value=9 selected=(schedule.monthNum === '9') ? 'selected' : undefined)= 'September'
            option(value=10 selected=(schedule.monthNum === '10') ? 'selected' : undefined)= 'Oktober'
            option(value=11 selected=(schedule.monthNum === '11') ? 'selected' : undefined)= 'November'
            option(value=12 selected=(schedule.monthNum === '12') ? 'selected' : undefined)= 'Desember'
        .col-md-auto
          a.btn.btn-primary(href='#', role='button')
            i.fas.fa-search
            | Search
      p.lead.text-center 
      p.text-center 
      table.table
        thead
          tr
            th Date
            th Day
            th Clock In
            th Clock Out
            th Remarks
        tbody
          for log in logs
            tr(class=(log.day == 6 || log.day == 7 ) ? 'table-danger' : undefined)
              td= log.attendance_date
              td= log.attendance_day
              td= log.clock_in
              td= log.clock_out
              td= log.remarks
    .col-md-3
